<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Account Number</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>

      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.account_number %></td>
      </tr>

    <% end %>
  </tbody>
</table>
