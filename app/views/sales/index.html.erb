<h1>Sales</h1>

<h2>September 1 - December 31, 2012</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Units Sold</th>
      <th>Price Per Unit</th>
      <th>Invoice #</th>
      <th>Invoice Frequency</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>

      <tr>
        <td><%= sale.sale_date %></td>
        <td>$<%= sale.sale_amount %></td>
        <td><%= sale.units_sold %></td>
        <td><%= SalesController.price_per_unit(sale) %></td>
        <td><%= sale.invoice_no %></td>
        <td><%= sale.invoice_frequency %></td>
      </tr>

    <% end %>
  </tbody>
</table>
